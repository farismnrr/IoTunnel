{
	"name": "iotunnel",
	"module": "src/server.ts",
	"type": "module",
	"scripts": {
		"dev": "bun install && bun copy-env && bun generate-token",
		"start": "bun --watch src/server.ts",
		"lint": "eslint src",
		"copy-env": "bun -e \"const fs = require('fs'); fs.copyFileSync('.env.example', '.env');\" || cp .env.example .env",
		"generate-token": "bun src/Infrastructure/settings/token.ts"
	},
	"devDependencies": {
		"@eslint/js": "^9.9.1",
		"@types/bcrypt": "^5.0.2",
		"@types/bun": "latest",
		"@types/eslint__js": "^8.42.3",
		"@types/nodemailer": "^6.4.15",
		"@types/pg": "^8.11.7",
		"@types/uuid": "^10.0.0",
		"eslint": "^9.6.0",
		"globals": "^15.9.0",
		"typescript-eslint": "^8.3.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@hapi/hapi": "^21.3.10",
		"@hapi/jwt": "^3.2.0",
		"auto-bind": "^5.0.1",
		"bcrypt": "^5.1.1",
		"joi": "^17.13.3",
		"nanoid": "^5.0.7",
		"nodemailer": "^6.9.14",
		"pg": "^8.12.0"
	}
}
